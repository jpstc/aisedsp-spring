{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Azure region for all resources"
      }
    },
    "environmentName": {
      "type": "string",
      "defaultValue": "[format('aisedsp-spring-{0}', uniqueString(resourceGroup().id))]",
      "metadata": {
        "description": "Container Apps environment name"
      }
    },
    "mzvImage": {
      "type": "string",
      "defaultValue": "mcr.microsoft.com/azuredocs/containerapps-helloworld:latest",
      "metadata": {
        "description": "Container image for MZV service (replace with ACR image later)"
      }
    },
    "stcImage": {
      "type": "string",
      "defaultValue": "mcr.microsoft.com/azuredocs/containerapps-helloworld:latest",
      "metadata": {
        "description": "Container image for STC/CDBP service (replace with ACR image later)"
      }
    },
    "sqlAdminLogin": {
      "type": "string",
      "defaultValue": "sqladmin",
      "metadata": {
        "description": "SQL admin login (DEV only \u2014 for PROD use Entra ID/MI)"
      }
    },
    "sqlAdminPassword": {
      "type": "secureString",
      "defaultValue": "ChangeMe-12345!",
      "metadata": {
        "description": "SQL admin password (DEV only)"
      }
    }
  },
  "variables": {
    "suffix": "[uniqueString(resourceGroup().id)]",
    "kvName": "[format('kv-aisedsp-{0}', variables('suffix'))]",
    "sqlServerName": "[format('sql-aisedsp-{0}', variables('suffix'))]",
    "sqlDbName": "db-aisedsp",
    "sbNsName": "[format('sb-aisedsp-{0}', variables('suffix'))]",
    "sbTopicName": "doc-status",
    "sbSubName": "stc-cdbp",
    "logwsName": "[format('log-aisedsp-{0}', variables('suffix'))]",
    "managedEnvName": "[parameters('environmentName')]",
    "apimName": "[format('apim-aisedsp-{0}', variables('suffix'))]",
    "mzvAppName": "mzv-service",
    "stcAppName": "stc-cdbp"
  },
  "resources": [
    {
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2023-07-01",
      "name": "[variables('kvName')]",
      "location": "[parameters('location')]",
      "properties": {
        "sku": {
          "family": "A",
          "name": "standard"
        },
        "tenantId": "[tenant().tenantId]",
        "enableRbacAuthorization": true,
        "enabledForTemplateDeployment": true
      }
    },
    {
      "type": "Microsoft.Sql/servers",
      "apiVersion": "2022-05-01-preview",
      "name": "[variables('sqlServerName')]",
      "location": "[parameters('location')]",
      "properties": {
        "administratorLogin": "[parameters('sqlAdminLogin')]",
        "administratorLoginPassword": "[parameters('sqlAdminPassword')]",
        "publicNetworkAccess": "Enabled"
      }
    },
    {
      "type": "Microsoft.Sql/servers/databases",
      "apiVersion": "2022-05-01-preview",
      "name": "[format('{0}/{1}', variables('sqlServerName'), variables('sqlDbName'))]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "GP_S_Gen5_1",
        "tier": "GeneralPurpose"
      },
      "properties": {
        "autoPauseDelay": 60,
        "minCapacity": 0.5
      },
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', variables('sqlServerName'))]"
      ]
    },
    {
      "type": "Microsoft.ServiceBus/namespaces",
      "apiVersion": "2022-10-01-preview",
      "name": "[variables('sbNsName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Standard"
      }
    },
    {
      "type": "Microsoft.ServiceBus/namespaces/topics",
      "apiVersion": "2022-10-01-preview",
      "name": "[format('{0}/{1}', variables('sbNsName'), variables('sbTopicName'))]",
      "dependsOn": [
        "[resourceId('Microsoft.ServiceBus/namespaces', variables('sbNsName'))]"
      ]
    },
    {
      "type": "Microsoft.ServiceBus/namespaces/topics/subscriptions",
      "apiVersion": "2022-10-01-preview",
      "name": "[format('{0}/{1}/{2}', variables('sbNsName'), variables('sbTopicName'), variables('sbSubName'))]",
      "dependsOn": [
        "[resourceId('Microsoft.ServiceBus/namespaces/topics', variables('sbNsName'), variables('sbTopicName'))]"
      ]
    },
    {
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2022-10-01",
      "name": "[variables('logwsName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "PerGB2018"
      },
      "properties": {}
    },
    {
      "type": "Microsoft.App/managedEnvironments",
      "apiVersion": "2023-05-01",
      "name": "[variables('managedEnvName')]",
      "location": "[parameters('location')]",
      "properties": {
        "appLogsConfiguration": {
          "destination": "log-analytics",
          "logAnalyticsConfiguration": {
            "customerId": "[reference(resourceId('Microsoft.OperationalInsights/workspaces', variables('logwsName')), '2022-10-01').customerId]",
            "sharedKey": "[listKeys(resourceId('Microsoft.OperationalInsights/workspaces', variables('logwsName')), '2020-08-01').primarySharedKey]"
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.OperationalInsights/workspaces', variables('logwsName'))]"
      ]
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2023-05-01",
      "name": "[variables('mzvAppName')]",
      "location": "[parameters('location')]",
      "properties": {
        "environmentId": "[resourceId('Microsoft.App/managedEnvironments', variables('managedEnvName'))]",
        "configuration": {
          "ingress": {
            "external": true,
            "targetPort": 8080
          }
        },
        "template": {
          "containers": [
            {
              "name": "mzv",
              "image": "[parameters('mzvImage')]",
              "env": [
                {
                  "name": "SQL_CONN",
                  "value": "TO_BE_SET_IN_PORTAL"
                },
                {
                  "name": "SB_CONN",
                  "value": "TO_BE_SET_IN_PORTAL"
                },
                {
                  "name": "SB_TOPIC",
                  "value": "doc-status"
                }
              ]
            }
          ]
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.App/managedEnvironments', variables('managedEnvName'))]"
      ]
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2023-05-01",
      "name": "[variables('stcAppName')]",
      "location": "[parameters('location')]",
      "properties": {
        "environmentId": "[resourceId('Microsoft.App/managedEnvironments', variables('managedEnvName'))]",
        "configuration": {
          "ingress": {
            "external": true,
            "targetPort": 8081
          }
        },
        "template": {
          "containers": [
            {
              "name": "stc",
              "image": "[parameters('stcImage')]",
              "env": [
                {
                  "name": "SQL_CONN",
                  "value": "TO_BE_SET_IN_PORTAL"
                },
                {
                  "name": "SB_CONN",
                  "value": "TO_BE_SET_IN_PORTAL"
                },
                {
                  "name": "SB_TOPIC",
                  "value": "doc-status"
                },
                {
                  "name": "SB_SUB",
                  "value": "stc-cdbp"
                }
              ]
            }
          ]
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.App/managedEnvironments', variables('managedEnvName'))]"
      ]
    },
    {
      "type": "Microsoft.ApiManagement/service",
      "apiVersion": "2022-08-01",
      "name": "[variables('apimName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Developer",
        "capacity": 1
      },
      "properties": {
        "publisherEmail": "admin@example.com",
        "publisherName": "aisedsp"
      }
    },
    {
      "type": "Microsoft.ApiManagement/service/apis",
      "apiVersion": "2022-08-01",
      "name": "[format('{0}/{1}', variables('apimName'), 'mzv')]",
      "properties": {
        "path": "mzv",
        "protocols": [
          "https"
        ],
        "displayName": "MZV API"
      },
      "dependsOn": [
        "[resourceId('Microsoft.ApiManagement/service', variables('apimName'))]"
      ]
    },
    {
      "type": "Microsoft.ApiManagement/service/apis",
      "apiVersion": "2022-08-01",
      "name": "[format('{0}/{1}', variables('apimName'), 'stc')]",
      "properties": {
        "path": "stc",
        "protocols": [
          "https"
        ],
        "displayName": "STC API"
      },
      "dependsOn": [
        "[resourceId('Microsoft.ApiManagement/service', variables('apimName'))]"
      ]
    }
  ],
  "outputs": {
    "apimGatewayUrl": {
      "type": "string",
      "value": "[format('https://{0}.azure-api.net', variables('apimName'))]"
    },
    "mzvUrl": {
      "type": "string",
      "value": "[format('https://{0}.{1}', variables('mzvAppName'), reference(resourceId('Microsoft.App/managedEnvironments', variables('managedEnvName')), '2023-05-01').defaultDomain)]"
    },
    "stcUrl": {
      "type": "string",
      "value": "[format('https://{0}.{1}', variables('stcAppName'), reference(resourceId('Microsoft.App/managedEnvironments', variables('managedEnvName')), '2023-05-01').defaultDomain)]"
    }
  }
}